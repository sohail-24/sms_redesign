# =============================================================================
# School Management System - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
# =============================================================================

# =============================================================================
# Django Settings
# =============================================================================

# SECURITY WARNING: Generate a new secret key for production!
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# Set to False in production
DJANGO_DEBUG=True

# Comma-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# Database Configuration
# =============================================================================

DB_NAME=sms_db
DB_USER=sms_user
DB_PASSWORD=your-secure-db-password
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================

REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# Email Configuration
# =============================================================================

# For development, use console backend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production, use SMTP
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@your-school.edu

# =============================================================================
# JWT Configuration
# =============================================================================

# Access token lifetime in minutes
JWT_ACCESS_TOKEN_LIFETIME=30

# Refresh token lifetime in days
JWT_REFRESH_TOKEN_LIFETIME=7

# =============================================================================
# CORS Configuration
# =============================================================================

# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# AWS S3 Configuration (Optional - for production file storage)
# =============================================================================

# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# Sentry Configuration (Optional - for production error tracking)
# =============================================================================

# SENTRY_DSN=your-sentry-dsn

# =============================================================================
# Superuser Configuration (Optional - auto-create on first run)
# =============================================================================

DJANGO_SUPERUSER_EMAIL=admin@your-school.edu
DJANGO_SUPERUSER_PASSWORD=your-secure-admin-password

# =============================================================================
# Flower Configuration (Optional - for Celery monitoring)
# =============================================================================

FLOWER_BASIC_AUTH=admin:your-secure-password
